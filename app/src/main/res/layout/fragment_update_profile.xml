<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".navigations.account.UpdateProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="Update Profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/ic_edit_black_48dp"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">


                    </ImageView>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="-8dp"
                android:src="@drawable/ic_wave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-10dp"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_update_number"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_background_red"
                        android:paddingHorizontal="15dp"
                        android:text="Update Number"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium">

                    </Button>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_update_profile_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputLayout"
                        android:layout_marginHorizontal="40dp"
                        app:hintTextColor="@color/colorBlack">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_update_profile_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/EditText"
                            android:hint="Mobile Number"
                            android:drawableEnd="@drawable/ic_mobile"
                            android:textColor="@color/colorBlack"
                            android:inputType="number">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_update_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputLayout"
                android:layout_marginHorizontal="40dp"
                app:hintTextColor="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_update_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditText"
                    android:hint="Email"
                    android:drawableEnd="@drawable/ic_email_login"
                    android:textColor="@color/colorBlack"
                    android:inputType="textEmailAddress">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_update_profile_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputLayout"
                android:layout_marginHorizontal="40dp"
                app:hintTextColor="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_update_profile_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditText"
                    android:hint="First Name"
                    android:drawableEnd="@drawable/ic_profile"
                    android:textColor="@color/colorBlack"
                    android:inputType="text">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_update_profile_middlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputLayout"
                android:layout_marginHorizontal="40dp"
                app:hintTextColor="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_update_profile_middlename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditText"
                    android:hint="Middle Name"
                    android:drawableEnd="@drawable/ic_profile"
                    android:textColor="@color/colorBlack"
                    android:inputType="text">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_update_profile_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputLayout"
                android:layout_marginHorizontal="40dp"
                app:hintTextColor="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_update_profile_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditText"
                    android:hint="Last Name"
                    android:drawableEnd="@drawable/ic_profile"
                    android:textColor="@color/colorBlack"
                    android:inputType="text">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/btn_update_profile"
                android:textSize="16sp"
                android:text="Update Profile"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/btn_background_red"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="40dp"/>



            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </Space>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>