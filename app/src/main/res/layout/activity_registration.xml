<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.kushina.customer.android.start_up_screens.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginHorizontal="-10dp"
            android:layout_marginTop="-8dp"
            android:src="@drawable/ic_wave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:text="Register"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="20dp"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputLayout"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorBlack">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                >

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputLayout"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorBlack">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:hint="Password (must be 10 characters or above)"
                android:inputType="textPassword"
                android:paddingStart="20dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputLayout"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorBlack">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_register_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingStart="20dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_register_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputLayout"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorBlack">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_register_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:hint="First Name"
                android:inputType="text"
                android:paddingStart="20dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_register_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputLayout"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorBlack">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_register_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:hint="Last Name"
                android:inputType="text"
                android:paddingStart="20dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_register_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputLayout"
            android:layout_marginHorizontal="40dp"
            app:hintTextColor="@color/colorBlack">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_register_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:hint="Mobile Number"
                android:inputType="number"
                android:paddingStart="20dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_referral_code"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Referral Code"
                android:gravity="start|center"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (Optional)"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="@color/hintColor"
                android:textStyle="italic"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/round_border_5"
            android:paddingHorizontal="60dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_register_referral_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/colorBlack"
                android:translationY="3dp"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="10dp"
                android:textSize="24sp"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                app:hintTextColor="@color/colorBlack"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:maxLength="10"
                />

        </LinearLayout>


        <CheckBox
            android:id="@+id/cb_terms_and_agreement"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="By checking, I agree to Kushina's"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </CheckBox>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_privacy_policy"
                android:textStyle="bold"
                android:textColor="@color/linkColor"
                android:text="Privacy Policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:textColor="@color/colorBlack"
                android:layout_marginHorizontal="5dp"
                android:text="and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/btn_terms_and_conditions"
                android:textStyle="bold"
                android:textColor="@color/linkColor"
                android:text="Terms and Conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingRight="5dp"
                android:text="Note:"
                android:textStyle="bold|italic"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:textStyle="italic"
                android:text="Kushina will send a code to the mobile number you provided."
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>



        <Button
            android:id="@+id/btn_register"
            android:textSize="16sp"
            android:text="Create Account"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_bg"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <Button
            android:id="@+id/btn_back_to_login"
            android:textSize="16sp"
            android:text="Back to Login"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_bg"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </Space>


    </LinearLayout>


    </ScrollView>

</RelativeLayout>