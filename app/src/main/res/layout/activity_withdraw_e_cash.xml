            <LinearLayout
                android:id="@+id/btn_viewpager_withdraw"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_withdraw_ecash_lbl_withdraw"
                    android:gravity="center"
                    android:text="WITHDRAW E-CASH"
                    android:textSize="14sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/colorOrange" />

            <LinearLayout
                android:id="@+id/btn_viewpager_withdraw_history"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_withdraw_ecash_lbl_withdraw_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="WITHDRAW HISTORY"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>



        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_below="@id/ll_view_switcher"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTitle"/>


    </LinearLayout>

    <ScrollView
