            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTitle"/>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/colorTitle"
                    android:text="Account Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>

                <TextView
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Enter the account details of where you want to withdraw."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_withdraw_ecash_account_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:layout_marginLeft="80dp"
                    app:hintTextColor="@color/colorTitle">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_marginBottom="10dp"
                        android:id="@+id/edt_withdraw_ecash_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorTitle"
                        android:translationY="3dp"
                        android:drawableTint="@color/colorPrimary"
                        android:background="@drawable/round_border"
                        android:drawableLeft="@drawable/ic_credit_card_black_24dp"
                        android:drawablePadding="10dp"
                        android:hint="Account Number"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorTitle"
                        app:hintTextColor="@color/colorTitle">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_withdraw_ecash_account_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:layout_marginLeft="80dp"
                    app:hintTextColor="@color/colorTitle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_marginBottom="10dp"
                        android:id="@+id/edt_withdraw_ecash_account_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorTitle"
                        android:translationY="3dp"
                        android:drawableTint="@color/colorPrimary"
                        android:background="@drawable/round_border"
                        android:drawableLeft="@drawable/ic_person_login"
                        android:drawablePadding="10dp"
                        android:hint="Account Name"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorTitle"
                        app:hintTextColor="@color/colorTitle">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTitle"/>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/colorTitle"
                        android:text="Amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </TextView>

                    <LinearLayout
                        android:gravity="end"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingRight="8dp"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/colorTitle"
                            android:text="Available E-Cash:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_withdraw_ecash_available_ecash"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimary"
                            android:text="None"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>



                </LinearLayout>



                <TextView
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Enter how much would you like to withdraw."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_withdraw_ecash_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:layout_marginLeft="80dp"
                    app:hintTextColor="@color/colorTitle">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_marginBottom="10dp"
                        android:id="@+id/edt_withdraw_ecash_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorTitle"
                        android:translationY="3dp"
                        android:drawableTint="@color/colorPrimary"
                        android:background="@drawable/round_border"
                        android:drawableLeft="@drawable/ic_credit_card_black_24dp"
                        android:drawablePadding="10dp"
                        android:hint="Amount"
                        android:inputType="number"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorTitle"
                        app:hintTextColor="@color/colorTitle">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTitle"/>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/colorTitle"
                android:text="Withdraw OTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </TextView>

            <TextView
                android:textStyle="bold"
                android:textSize="11sp"
                android:textColor="@color/colorPrimary"
                android:text="Enter the OTP key sent to your mobile number."
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_withdraw_ecash_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:layout_marginLeft="80dp"
                app:hintTextColor="@color/colorTitle">

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_marginBottom="10dp"
                    android:id="@+id/edt_withdraw_ecash_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTitle"
                    android:translationY="3dp"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/round_border"
                    android:drawableLeft="@drawable/ic_smartphone_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="OTP Key"
                    android:inputType="number"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorTitle"
                    app:hintTextColor="@color/colorTitle">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_request_otp"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="20dp"
                android:textSize="14sp"
                android:text="Request OTP"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_gravity="end"
                android:background="@drawable/round_bg"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp">



            </Button>

        </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTitle"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingRight="5dp"
                    android:text="Note:"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView

                    android:text="Withdraw requests may take up to 24-48 hours to be processed."
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <Button
                android:id="@+id/btn_withdraw_ecash"
                android:textSize="16sp"
                android:text="Submit"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/round_bg"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">



            </Button>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deposit E-Cash"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </Space>




        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:visibility="gone"
        android:layout_below="@id/ll_view_switcher"
        android:id="@+id/ll_withdraw_history"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_marginTop="120dp"
            android:orientation="vertical"
            android:id="@+id/ll_no_history_yet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_history_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </ImageView>

            <TextView
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorTitle"
                android:textStyle="bold"
                android:gravity="center"
                android:text="You don't have any withdraws yet."
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:paddingBottom="50dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/rv_withdraw_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </Space>

    </LinearLayout>


</RelativeLayout>