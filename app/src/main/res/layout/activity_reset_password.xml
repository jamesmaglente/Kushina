<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".start_up_screens.ResetPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginHorizontal="-10dp"
                android:layout_marginTop="-8dp"
                android:src="@drawable/ic_wave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Reset Password"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="20dp"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="40dp"
                android:gravity="start"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mobile"
                    android:layout_marginRight="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Code"
                    android:gravity="start|center"
                    android:textSize="17sp"
                    android:textColor="@color/colorBlack"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/round_border_5"
                android:paddingHorizontal="60dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_reset_password_otp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/colorBlack"
                    android:translationY="3dp"
                    android:drawableTint="@color/colorPrimary"
                    android:drawablePadding="10dp"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    app:hintTextColor="@color/colorBlack"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:maxLength="6"
                    />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_reset_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputLayout"
                android:layout_marginHorizontal="40dp"
                app:hintTextColor="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_reset_password_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditText"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:paddingStart="20dp"
                    >

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_reset_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputLayout"
                android:layout_marginHorizontal="40dp"
                app:hintTextColor="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_reset_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditText"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingStart="20dp">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_reset_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_bg"
                android:text="Reset Password"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="16sp"
                android:textStyle="bold" />


                    <TextView
                        android:id="@+id/btn_reset_password_request_code"
                        android:textStyle="bold"
                        android:textColor="@color/colorTitle"
                        android:text="Request New Code"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>